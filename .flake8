[flake8]
max-line-length = 99
show_source = true
format = pylint
ignore =
    # Module imported but unused
    F401,
    # Line break occurred after a binary operator
    W504,
    # Local variable name is assigned to but never used
    F841,
    # Line too long
    E501,
    # White space before ':'
    E203

exclude =
    .git,
    __pycache__,
    datasets/*,
    tests/*,
    notebooks/*,
    logs/*,
    .tox,
    build,
    dist,
    .eggs,
    docs/conf.py,
    venv,
